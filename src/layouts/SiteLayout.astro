---
import Header from '@/components/Header.astro';
const { title = 'Pintores Valencia - Pintores profesionales en Valencia', description = 'Pintores en Valencia. Servicios de pintura interior, exterior, lacado, papel pintado. Presupuesto gratis. 722 208 131' } = Astro.props;
const pathname = Astro.url.pathname;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`https://pintores-valencia.com${pathname}`} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <footer class="border-t bg-gray-50">
      <div class="container mx-auto py-8 text-sm flex flex-col gap-2">
        <div>Â© {new Date().getFullYear()} Pintores Valencia</div>
        <div class="flex gap-4">
          <a href="/sitemap-index.xml">Sitemap</a>
          <a href="/politica-privacidad/">Privacidad</a>
          <a href="/aviso-legal/">Aviso legal</a>
        </div>
      </div>
    </footer>
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'LocalBusiness',
      name: 'Pintores Valencia',
      url: 'https://pintores-valencia.com',
      areaServed: 'Valencia'
    })}></script>
  </body>
</html>