---
import SiteLayout from '../../layouts/SiteLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.tsx';
import { getCollection } from 'astro:content';

const cats = (await getCollection('blogCategories')).sort((a,b)=>(a.data.order??99)-(b.data.order??99));
---

<SiteLayout 
  title="Blog - Pintores en Valencia" 
  description="Consejos de pintura: gotelé, impermeabilización, colores, fachadas y barnices. Guías profesionales para tus proyectos de pintura."
  keywords="blog pintura valencia, consejos pintar casa, guia gotele"
>
  <div class="container mx-auto px-4">
    <Breadcrumbs items={[{ label: "Blog" }]} client:load />
    
    <div class="py-12">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Blog de Pintura
        </h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          Encuentra artículos especializados, consejos profesionales y guías completas 
          sobre pintura, gotelé, impermeabilización y mucho más.
        </p>
      </div>

      <section class="py-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {cats.map(c => (
        <div class="rounded-2xl border bg-white p-6 hover:shadow transition">
          <h2 class="text-xl font-semibold mb-2">{c.data.name}</h2>
          <p class="text-gray-600 mb-4">{c.data.description}</p>
          <a href={`/blogs/${c.data.slug}/`} class="inline-flex items-center gap-2 px-3 h-9 rounded-md border text-blue-700 hover:bg-blue-700 hover:text-white transition-colors">
            Ver artículos
          </a>
        </div>
      ))}
        </div>
      </section>
    </div>
  </div>
</SiteLayout>