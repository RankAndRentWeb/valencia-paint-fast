---
import ServiceTemplate from '../../../components/ServiceTemplate.astro';
import heroImg from '../../../assets/entrega-llaves-vivienda-pintada.jpg';

const meta = {
  title: "Pintura comunidades - Pintores en Valencia",
  description: "Pintura en escaleras y zonas comunes con planificación y seguridad. Presupuesto gratis en Valencia.",
  canonical: "https://pintores-valencia.com/servicios/pintura-comunidades/",
  ogImage: "/og-home.webp"
};

const hero = {
  title: "Pintura comunidades",
  subtitle: "Pintura de escaleras y zonas comunes con seguridad y planificación.",
  priceHtml: 'Presupuesto personalizado <span class="text-sm text-gray-500 font-normal">Según superficie</span>',
  badges: ["Coordinación de vecinos", "Materiales resistentes"],
  features: ["Coordinación de vecinos", "Materiales resistentes", "Señalización"],
  img: heroImg
};

const blocks = {
  problem: {
    title: "Desafíos en comunidades",
    items: ["Coordinación de vecinos", "Acceso complejo", "Normativas especiales"]
  },
  solution: {
    title: "Nuestra solución",
    items: ["Gestión integral", "Planificación detallada", "Cumplimiento normativo"]
  },
  process: [
    "Reunión con administrador",
    "Planificación de fases",
    "Señalización de zonas",
    "Ejecución por tramos"
  ],
  prose: `
    <div class="py-12">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl font-bold mb-6">Especialistas en comunidades</h2>
        <p class="mb-4">
          Los trabajos en comunidades de propietarios requieren especial coordinación 
          y planificación para minimizar las molestias a los vecinos.
        </p>
        <p class="mb-6">
          Nos encargamos de toda la gestión y coordinación, trabajando estrechamente 
          con el administrador para garantizar el cumplimiento de normativas.
        </p>
      </div>
    </div>
  `,
  faq: [
    {
      q: "¿Se encargan de la gestión con vecinos?",
      a: "Sí, coordinamos todo con el administrador y comunicamos a los vecinos."
    },
    {
      q: "¿Cumplen las normativas de seguridad?",
      a: "Totalmente. Cumplimos todas las normativas de seguridad laboral vigentes."
    }
  ]
};
---

<ServiceTemplate {meta} {hero} {blocks} />