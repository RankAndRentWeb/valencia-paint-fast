---
import Layout from '@/layouts/SiteLayout.astro';
import { getCollection } from 'astro:content';
import ServicePage from '@/components/ServicePage.astro';

export async function getStaticPaths() {
  const entries = await getCollection('services');
  return entries.map((entry) => ({ params: { slug: entry.slug }, props: { entry } }));
}

const { entry } = Astro.props;
const { data } = entry;
---

<Layout title={`${data.title} - Pintores en Valencia`} description={data.subtitle ?? "Pintores en Valencia. Presupuesto gratis en 24h."}>
  <ServicePage {entry} />
</Layout>