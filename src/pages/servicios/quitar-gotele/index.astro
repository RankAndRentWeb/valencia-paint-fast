---
import SiteLayout from '../../../layouts/SiteLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.tsx';

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "https://pintores-valencia.com/#business",
  "name": "Pintores en Valencia",
  "url": "https://pintores-valencia.com",
  "image": "https://pintores-valencia.com/og-home.webp",
  "telephone": "+34722208131",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Valencia",
    "addressRegion": "Comunitat Valenciana",
    "postalCode": "46000",
    "addressCountry": "ES"
  },
  "openingHours": ["Mo-Sa 08:00-20:00"],
  "priceRange": "€€",
  "areaServed": [
    {
      "@type": "City",
      "name": "Valencia"
    }
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Cuánto se tarda?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Piso de 70–90 m²: entre 3 y 5 días, según estado y secados."
      }
    },
    {
      "@type": "Question",
      "name": "¿Genera mucho polvo?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Usamos lijadoras con aspiración, plásticos y barreras de polvo. Limpiamos al finalizar."
      }
    },
    {
      "@type": "Question",
      "name": "¿Qué método me conviene?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Depende del tipo de gotelé y del soporte. En la visita valoramos lijado, enlucido o cobertura para equilibrar calidad, tiempo y coste."
      }
    },
    {
      "@type": "Question",
      "name": "¿Puedo pintar justo después?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí. Tras la imprimación, las paredes quedan listas para aplicar la pintura de acabado."
      }
    }
  ]
};
---

<SiteLayout 
  title="Quitar Gotelé Valencia 【Desde 10€/m²】Lijado sin polvo + Enlucido"
  description="✅ Eliminamos gotelé en Valencia con 3 métodos: lijado sin polvo, enlucido profesional y cobertura. Desde 10€/m². Presupuesto gratis 24h. 15 años experiencia."
  keywords="quitar gotele valencia, eliminar gotele valencia, alisar paredes valencia, lijado gotele valencia, enlucido valencia, precio quitar gotele"
  canonical="https://pintores-valencia.com/servicios/quitar-gotele/"
  schema={[localBusinessSchema, faqSchema]}
  ogImage="/og-home.webp"
>
  <main class="flex-1">
    <!-- Breadcrumbs and Hero Section -->
    <section class="bg-gradient-to-br from-slate-50 to-blue-50">
      <!-- Breadcrumbs -->
      <div class="py-4">
        <div class="container mx-auto px-4">
          <Breadcrumbs 
            items={[
              { label: "Servicios", href: "/servicios/" },
              { label: "Quitar Gotelé" }
            ]} 
            client:load 
          />
        </div>
      </div>

      <!-- Hero Content -->
      <div class="py-12">
        <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <!-- Left side - Content -->
          <div>
            <!-- Title -->
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Quitar gotelé en Valencia</h1>
            
            <!-- Subtitle -->
            <p class="text-xl text-gray-700 mb-6">Eliminamos el gotelé y dejamos tus paredes lisas con los mejores métodos profesionales</p>
            
            <!-- Price -->
            <div class="mb-6">
              <span class="text-2xl font-bold text-accent">desde 10€/m² <span class="text-sm text-gray-500 font-normal">Material incluido</span></span>
            </div>
            
            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-4 mb-8">
              <a href="/presupuesto/" class="h-11 px-6 rounded-md bg-accent hover:bg-accent/90 text-white font-semibold shadow flex items-center justify-center">
                Presupuesto Gratis
              </a>
              <a href="tel:+34722208131" class="h-11 px-6 rounded-md bg-blue-600 hover:bg-blue-700 text-white font-semibold inline-flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
                722 208 131
              </a>
            </div>
            
            <!-- Features -->
            <div class="space-y-2">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Sin polvo</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Acabado perfecto</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Limpieza incluida</span>
              </div>
            </div>
          </div>
          
          <!-- Right side - Image -->
          <div class="order-first lg:order-last">
            <div class="relative rounded-2xl overflow-hidden shadow-xl">
              <img src="/src/assets/quitar-gotelé-valencia.png" alt="Lijado sin polvo para quitar gotelé en Valencia - Técnica profesional de eliminación de gotelé" width="1920" height="1080" class="w-full h-auto object-cover" loading="lazy">
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Precio y condiciones -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Precio y condiciones
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
              Presupuesto transparente desde 10€/m² con materiales incluidos
            </p>
          </div>
          
          <div class="space-y-6 text-gray-700">
            <p class="text-lg leading-relaxed">
              El coste final depende del tipo de gotelé, el estado de las paredes y los metros de la vivienda. 
              En todos los casos ofrecemos un presupuesto cerrado y transparente, sin sorpresas.
            </p>
            
            <p class="text-lg leading-relaxed">
              Nuestros pintores utilizan pasta niveladora e imprimación profesional, garantizando un acabado perfecto y duradero. 
              Si lo deseas, también podemos encargarnos de la pintura final, para que no tengas que preocuparte por nada.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Nuestro proceso paso a paso -->
    <section class="py-12 bg-gray-100">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Nuestro proceso paso a paso
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Trabajamos con técnica profesional para garantizar los mejores resultados
          </p>
        </div>
        
        <div class="max-w-3xl mx-auto">
          <div class="space-y-6">
            <!-- Paso 1 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                1
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-2">Protección inicial</h3>
                <p class="text-gray-700 leading-relaxed">
                  Protegemos suelos y muebles con papel y plásticos, sellando las puertas para evitar la dispersión de polvo.
                </p>
              </div>
            </div>

            <!-- Paso 2 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                2
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-2">Eliminación del gotelé</h3>
                <p class="text-gray-700 leading-relaxed">
                  Eliminamos la textura del gotelé mediante un lijado con aspiración profesional.
                </p>
              </div>
            </div>

            <!-- Paso 3 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                3
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-2">Alisado de superficie</h3>
                <p class="text-gray-700 leading-relaxed">
                  Una vez la superficie está limpia, aplicamos enlucido y lijado fino para alisar completamente la pared.
                </p>
              </div>
            </div>

            <!-- Paso 4 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                4
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-2">Imprimación selladora</h3>
                <p class="text-gray-700 leading-relaxed">
                  Colocamos una imprimación selladora que deja la superficie lista para pintar.
                </p>
              </div>
            </div>

            <!-- Paso 5 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                5
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-2">Limpieza final</h3>
                <p class="text-gray-700 leading-relaxed">
                  Todo el proceso se completa con una limpieza final del área de trabajo.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Contact Section -->
    <section class="py-12 bg-blue-600 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">¿Necesitas un presupuesto?</h2>
        <p class="text-xl mb-8">Te respondemos en menos de 24 horas</p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/presupuesto/" class="inline-flex items-center justify-center font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-orange-500 text-white hover:bg-orange-600 focus:ring-orange-500 shadow-md hover:shadow-lg px-6 py-3 text-lg rounded-lg">
            Pedir presupuesto gratis
          </a>
          <a href="tel:+34722208131" class="inline-flex items-center justify-center font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-white text-blue-600 hover:bg-gray-100 focus:ring-blue-500 shadow-md hover:shadow-lg px-6 py-3 text-lg rounded-lg gap-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            722 208 131
          </a>
        </div>
      </div>
    </section>    <!-- FAQ -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Preguntas frecuentes
          </h2>
        </div>

        <div class="max-w-3xl mx-auto space-y-6">
          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">
              ¿Cuánto tarda el proceso?
            </h3>
            <p class="text-gray-600">
              En un piso de 70–90 m², el trabajo suele durar entre 3 y 5 días, dependiendo del estado de las paredes.
            </p>
          </div>

          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">¿Se genera mucho polvo?</h3>
            <p class="text-gray-600">
              No. Gracias a las lijadoras con aspiración y la protección del mobiliario, el trabajo se realiza con un nivel mínimo de polvo.
            </p>
          </div>

          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">
              ¿Puedo pintar después?
            </h3>
            <p class="text-gray-600">
              Sí. Las paredes quedan totalmente listas para aplicar la pintura de acabado una vez terminamos el alisado.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</SiteLayout>