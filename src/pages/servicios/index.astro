---
import Layout from '@/layouts/SiteLayout.astro';
import { getCollection } from 'astro:content';

const serviceEntries = await getCollection('services');
---

<Layout title="Servicios de Pintura en Valencia" description="Todos nuestros servicios profesionales de pintura en Valencia: interior, exterior, gotelé, impermeabilización y más.">
  <section class="container mx-auto py-8">
    <h1 class="text-3xl font-semibold mb-6">Servicios</h1>
    <div class="grid md:grid-cols-2 gap-8">
      {serviceEntries.map((service) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-2">
            <a href={`/servicios/${service.slug}/`} 
               class="hover:text-orange-600 transition-colors">
              {service.data.title}
            </a>
          </h2>
          {service.data.description && <p class="text-gray-600 mb-4">{service.data.description}</p>}
          <a href={`/servicios/${service.slug}/`} 
             class="text-orange-600 hover:underline font-medium">
            Ver más →
          </a>
        </div>
      ))}
    </div>
  </section>
</Layout>