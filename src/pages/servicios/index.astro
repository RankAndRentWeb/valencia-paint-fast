---
import Layout from '@/layouts/SiteLayout.astro';
import { getCollection } from 'astro:content';

const serviceEntries = await getCollection('services');
---

<Layout title="Servicios de Pintura en Valencia" description="Todos nuestros servicios profesionales de pintura en Valencia: interior, exterior, gotelé, impermeabilización y más.">
  <div class="container mx-auto py-8">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Nuestros Servicios</h1>
      <p class="text-xl text-gray-600">Servicios profesionales de pintura en Valencia con garantía y calidad</p>
    </header>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {serviceEntries.map((service) => (
        <article key={service.slug} class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="p-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-2">
              <a href={`/servicios/${service.data.slug || service.slug}/`} 
                 class="hover:text-orange-600 transition-colors">
                {service.data.title}
              </a>
            </h2>
            <p class="text-gray-600 mb-4">{service.data.description}</p>
            <a href={`/servicios/${service.data.slug || service.slug}/`} 
               class="text-orange-600 hover:underline font-medium">
              Ver más →
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout>