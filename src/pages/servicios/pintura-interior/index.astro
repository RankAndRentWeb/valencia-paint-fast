---
import ServiceTemplate from '../../../components/ServiceTemplate.astro';
import heroImg from '../../../assets/pintura-interior-valencia.jpg';

const meta = {
  title: "Pintura interior - Pintores en Valencia",
  description: "Renovamos el interior de tu hogar con pinturas de primera calidad y acabados profesionales. Presupuesto gratis en Valencia.",
  canonical: "https://pintores-valencia.com/servicios/pintura-interior/",
  ogImage: "/og-home.webp"
};

const hero = {
  title: "Pintura interior de pisos y casas",
  subtitle: "Renovamos completamente el interior de tu hogar con pinturas de primera calidad y acabados profesionales.",
  priceHtml: 'desde 12€/m² <span class="text-sm text-gray-500 font-normal">Material incluido</span>',
  badges: ["Pinturas premium", "Limpieza incluida"],
  features: ["Pinturas premium", "Limpieza incluida", "Garantía 3 años"],
  img: heroImg
};

const blocks = {
  problem: {
    title: "Problemas comunes",
    items: ["Paredes deterioradas", "Colores desactualizados", "Falta de personalidad"]
  },
  solution: {
    title: "Nuestra solución",
    items: ["Pinturas de primera calidad", "Preparación profesional", "Acabados perfectos"]
  },
  process: [
    "Preparación de superficies",
    "Aplicación de imprimación",
    "Pintura con rodillo y pincel",
    "Acabados y detalles finales"
  ],
  prose: `
    <div class="py-12">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl font-bold mb-6">Renovación completa del interior</h2>
        <p class="mb-4">
          Transformamos el interior de tu hogar con pinturas de las mejores marcas y 
          técnicas profesionales que garantizan un acabado duradero y de calidad.
        </p>
        <p class="mb-6">
          Utilizamos únicamente pinturas premium que ofrecen excelente cobertura, 
          durabilidad y resistencia al lavado.
        </p>
      </div>
    </div>
  `,
  faq: [
    {
      q: "¿Qué tipos de pintura utilizáis para interiores?",
      a: "Utilizamos pinturas plásticas lavables de alta calidad, anti-moho para baños y cocinas, y pinturas especiales para techos. Todas de marcas reconocidas como Bruguer, Titán y Montó."
    },
    {
      q: "¿Cuántos días tarda pintar un piso completo?",
      a: "Un piso estándar de 80m² tarda entre 4-6 días laborables. Incluye preparación de paredes, imprimación y dos capas de acabado."
    },
    {
      q: "¿Movéis los muebles o lo tenemos que hacer nosotros?",
      a: "Nosotros movemos y protegemos todos los muebles. Solo pedimos que retiréis objetos frágiles y personales de valor."
    },
    {
      q: "¿Qué garantía tiene el trabajo de pintura?",
      a: "Ofrecemos 3 años de garantía en el trabajo de pintura. Si aparecen defectos por mala aplicación, lo reparamos sin coste."
    }
  ]
};

// JSON-LD para FAQ de Pintura Interior
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Qué tipos de pintura utilizáis para interiores?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Utilizamos pinturas plásticas lavables de alta calidad, anti-moho para baños y cocinas, y pinturas especiales para techos. Todas de marcas reconocidas como Bruguer, Titán y Montó."
      }
    },
    {
      "@type": "Question",
      "name": "¿Cuántos días tarda pintar un piso completo?",
      "acceptedAnswer": {
        "@type": "Answer", 
        "text": "Un piso estándar de 80m² tarda entre 4-6 días laborables. Incluye preparación de paredes, imprimación y dos capas de acabado."
      }
    },
    {
      "@type": "Question",
      "name": "¿Movéis los muebles o lo tenemos que hacer nosotros?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Nosotros movemos y protegemos todos los muebles. Solo pedimos que retiréis objetos frágiles y personales de valor."
      }
    },
    {
      "@type": "Question", 
      "name": "¿Qué garantía tiene el trabajo de pintura?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Ofrecemos 3 años de garantía en el trabajo de pintura. Si aparecen defectos por mala aplicación, lo reparamos sin coste."
      }
    }
  ]
};
---

<ServiceTemplate {meta} {hero} {blocks} />

<!-- JSON-LD FAQ Schema -->
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>