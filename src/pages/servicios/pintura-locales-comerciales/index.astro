---
import SiteLayout from '../../../layouts/SiteLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.tsx';

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Valencia Paint Fast - Pintura Locales Comerciales",
  "description": "Servicio profesional de pintura para locales comerciales, oficinas y negocios en Valencia. Trabajos nocturnos y fines de semana.",
  "url": "https://valenciapaintfast.com/servicios/pintura-locales-comerciales/",
  "telephone": "+34628849851",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Valencia",
    "addressRegion": "Valencia", 
    "addressCountry": "ES"
  },
  "areaServed": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": 39.4699,
      "longitude": -0.3763
    },
    "geoRadius": 30000
  },
  "priceRange": "€€",
  "openingHours": "Mo-Su 00:00-24:00"
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Pueden trabajar por las noches o fines de semana?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí, nos especializamos en trabajos fuera del horario comercial para no interrumpir la actividad del negocio. Trabajamos noches, madrugadas, fines de semana y festivos sin recargo adicional."
      }
    },
    {
      "@type": "Question", 
      "name": "¿Qué tipos de negocios atienden?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Atendemos todo tipo de locales: restaurantes, oficinas, tiendas, clínicas, peluquerías, talleres, naves industriales, centros de estética, consultas médicas y cualquier espacio comercial."
      }
    },
    {
      "@type": "Question",
      "name": "¿Cuánto tiempo tarda un local comercial?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Depende del tamaño y estado del local. Un local pequeño (50m²) puede estar listo en 1-2 noches. Locales grandes pueden requerir 3-5 noches. Siempre planificamos para minimizar el cierre del negocio."
      }
    },
    {
      "@type": "Question",
      "name": "¿Utilizan pinturas especiales para locales comerciales?",
      "acceptedAnswer": {
        "@type": "Answer", 
        "text": "Sí, utilizamos pinturas lavables, antibacterianas y de secado rápido específicas para cada tipo de negocio. Para restaurantes usamos pinturas resistentes a grasas, para clínicas pinturas desinfectables."
      }
    }
  ]
};
---

<SiteLayout 
  title="Pintura Locales Comerciales Valencia - Trabajo Nocturno | Valencia Paint Fast"
  description="Especialistas en pintura de locales comerciales en Valencia. Trabajamos noches y fines de semana. Sin interrumpir tu negocio. ☎️ 628 84 98 51"
  canonical="https://valenciapaintfast.com/servicios/pintura-locales-comerciales/"
  localBusinessSchema={localBusinessSchema}
  faqSchema={faqSchema}
>
  <main class="flex-1">
    <!-- Breadcrumbs and Hero Section -->
    <section class="bg-gradient-to-br from-slate-50 to-blue-50">
      <!-- Breadcrumbs -->
      <div class="container mx-auto px-4 py-4">
        <Breadcrumbs 
          items={[
            { label: "Servicios", href: "/servicios/" },
            { label: "Pintura Locales Comerciales" }
          ]} 
          client:load 
        />
      </div>

      <!-- Hero Content -->
      <div class="container mx-auto px-4 pb-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <!-- Left side - Content -->
          <div>
            <!-- Title -->
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Pintura locales comerciales en Valencia</h1>
            
            <!-- Subtitle -->
            <p class="text-xl text-gray-700 mb-6">Pintamos tu negocio sin interrumpir la actividad comercial. Trabajamos noches y fines de semana</p>
            
            <!-- Price -->
            <div class="mb-6">
              <span class="text-2xl font-bold text-accent">desde 10€/m² <span class="text-sm text-gray-500 font-normal">Material incluido</span></span>
            </div>
            
            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-4 mb-8">
              <a href="/presupuesto/" class="h-11 px-6 rounded-md bg-accent hover:bg-accent/90 text-white font-semibold shadow flex items-center justify-center">
                Presupuesto Gratis
              </a>
              <a href="tel:+34722208131" class="h-11 px-6 rounded-md bg-blue-600 hover:bg-blue-700 text-white font-semibold inline-flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
                722 208 131
              </a>
            </div>
            
            <!-- Features -->
            <div class="space-y-2">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Trabajo nocturno</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Sin interrupciones</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Secado rápido</span>
              </div>
            </div>
          </div>

          <!-- Right side - Image -->
          <div class="lg:order-last">
            <div class="relative">
              <img src="/src/assets/hero-pintores-valencia.jpg" alt="Pintura locales comerciales Valencia - Trabajo nocturno y fines de semana" width="1920" height="1080" class="w-full h-auto object-cover" loading="lazy">
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Precio y condiciones -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Precio y condiciones
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
              Presupuesto transparente desde 10€/m² sin recargos por trabajo nocturno
            </p>
          </div>
          
          <div class="space-y-6 text-gray-700">
            <p class="text-lg leading-relaxed">
              El coste final depende del tipo de negocio, superficie a pintar, tipo de pintura requerida y complejidad del trabajo. 
              En todos los casos ofrecemos un presupuesto cerrado y transparente, sin sorpresas ni recargos por trabajo nocturno.
            </p>
            
            <p class="text-lg leading-relaxed">
              Utilizamos pinturas específicas para cada tipo de negocio: lavables y antibacterianas para clínicas, resistentes a grasas para restaurantes, 
              y de secado rápido para minimizar interrupciones. Incluimos preparación de superficie, imprimación y acabado profesional.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Nuestro proceso paso a paso -->
    <section class="py-12 bg-gray-100">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Nuestro proceso paso a paso
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Trabajamos de forma organizada para no interrumpir tu actividad comercial
          </p>
        </div>
        
        <div class="max-w-3xl mx-auto">
          <div class="space-y-6">
            <!-- Paso 1 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                1
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Visita y planificación</h3>
                <p class="text-gray-700">Visitamos tu local para evaluar el trabajo y planificar el cronograma que mejor se adapte a tu negocio.</p>
              </div>
            </div>

            <!-- Paso 2 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                2
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Protección del mobiliario</h3>
                <p class="text-gray-700">Protegemos todo el mobiliario, equipos y productos del local para evitar cualquier daño durante el trabajo.</p>
              </div>
            </div>

            <!-- Paso 3 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                3
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Preparación de superficies</h3>
                <p class="text-gray-700">Limpiamos, lijamos y reparamos las superficies para garantizar un acabado perfecto y duradero.</p>
              </div>
            </div>

            <!-- Paso 4 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                4
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Aplicación de pintura específica</h3>
                <p class="text-gray-700">Utilizamos pinturas específicas para tu tipo de negocio: antibacterianas, lavables o resistentes según necesidades.</p>
              </div>
            </div>

            <!-- Paso 5 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                5
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Acabado y retoques</h3>
                <p class="text-gray-700">Aplicamos acabados finales y realizamos todos los retoques necesarios para un resultado impecable.</p>
              </div>
            </div>

            <!-- Paso 6 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                6
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Limpieza y entrega</h3>
                <p class="text-gray-700">Limpiamos completamente el local y retiramos protecciones. Tu negocio estará listo para abrir al día siguiente.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Contact Section -->
    <section class="py-12 bg-blue-600 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">¿Necesitas pintar tu local?</h2>
        <p class="text-xl mb-8">Te respondemos en menos de 24 horas</p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/presupuesto/" class="inline-flex items-center justify-center font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-orange-500 text-white hover:bg-orange-600 focus:ring-orange-500 shadow-md hover:shadow-lg px-6 py-3 text-lg rounded-lg">
            Pedir presupuesto gratis
          </a>
          <a href="tel:+34722208131" class="inline-flex items-center justify-center font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-white text-blue-600 hover:bg-gray-100 focus:ring-blue-500 shadow-md hover:shadow-lg px-6 py-3 text-lg rounded-lg gap-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            722 208 131
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Preguntas frecuentes
          </h2>
        </div>

        <div class="max-w-3xl mx-auto space-y-6">
          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">
              ¿Pueden trabajar por las noches o fines de semana?
            </h3>
            <p class="text-gray-600">
              Sí, nos especializamos en trabajos fuera del horario comercial para no interrumpir la actividad del negocio. Trabajamos noches, madrugadas, fines de semana y festivos sin recargo adicional.
            </p>
          </div>

          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">¿Qué tipos de negocios atienden?</h3>
            <p class="text-gray-600">
              Atendemos todo tipo de locales: restaurantes, oficinas, tiendas, clínicas, peluquerías, talleres, naves industriales, centros de estética, consultas médicas y cualquier espacio comercial.
            </p>
          </div>

          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">
              ¿Cuánto tiempo tarda un local comercial?
            </h3>
            <p class="text-gray-600">
              Depende del tamaño y estado del local. Un local pequeño (50m²) puede estar listo en 1-2 noches. Locales grandes pueden requerir 3-5 noches. Siempre planificamos para minimizar el cierre del negocio.
            </p>
          </div>

          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">
              ¿Utilizan pinturas especiales para locales comerciales?
            </h3>
            <p class="text-gray-600">
              Sí, utilizamos pinturas lavables, antibacterianas y de secado rápido específicas para cada tipo de negocio. Para restaurantes usamos pinturas resistentes a grasas, para clínicas pinturas desinfectables.
            </p>
          </div>
        </div>
      </div>
    </section>

  </main>
</SiteLayout>
</SiteLayout>
