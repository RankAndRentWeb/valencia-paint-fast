---
import SiteLayout from '../../../layouts/SiteLayout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.tsx';

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "https://pintores-valencia.com/#business",
  "name": "Pintores en Valencia",
  "url": "https://pintores-valencia.com",
  "image": "https://pintores-valencia.com/og-home.webp",
  "telephone": "+34722208131",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Valencia",
    "addressRegion": "Comunitat Valenciana",
    "postalCode": "46000",
    "addressCountry": "ES"
  },
  "openingHours": ["Mo-Sa 08:00-20:00"],
  "priceRange": "€€",
  "areaServed": [
    {
      "@type": "City",
      "name": "Valencia"
    }
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "¿Lacáis las puertas en casa o las llevamos?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Trabajamos tanto in situ como en nuestro taller. Para acabados premium recomendamos el taller, pero podemos lacar en casa si es necesario."
      }
    },
    {
      "@type": "Question",
      "name": "¿Qué tipos de lacado ofrecéis?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Ofrecemos lacado mate, satinado y brillo en cualquier color RAL. También lacado efecto madera y acabados especiales."
      }
    },
    {
      "@type": "Question",
      "name": "¿Cuánto tiempo tarda el proceso?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "En taller: 3-5 días. En casa: 2-3 días dependiendo del número de puertas y el tipo de acabado."
      }
    },
    {
      "@type": "Question",
      "name": "¿Incluye el desmontaje y montaje?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Sí, nos encargamos de todo: desmontaje, transporte (si aplica), lacado, y montaje final con ajustes."
      }
    }
  ]
};
---

<SiteLayout 
  title="Lacado de puertas Valencia - Pintores en Valencia"
  description="Lacado profesional de puertas y carpintería. Acabados perfectos con garantía. Presupuesto gratis en Valencia."
  keywords="lacado puertas valencia, lacar muebles valencia, carpinteria lacada valencia"
  canonical="https://pintores-valencia.com/servicios/lacado-puertas-carpinteria/"
  schema={[localBusinessSchema, faqSchema]}
  ogImage="/og-home.webp"
>
  <main class="flex-1">
    <!-- Breadcrumbs and Hero Section -->
    <section class="bg-gradient-to-br from-slate-50 to-blue-50">
      <!-- Breadcrumbs -->
      <div class="container mx-auto px-4 py-4">
        <Breadcrumbs 
          items={[
            { label: "Servicios", href: "/servicios/" },
            { label: "Lacado de Puertas" }
          ]} 
          client:load 
        />
      </div>

      <!-- Hero Content -->
      <div class="container mx-auto px-4 pb-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <!-- Left side - Content -->
          <div>
            <!-- Title -->
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Lacado de puertas y carpintería en Valencia</h1>
            
            <!-- Subtitle -->
            <p class="text-xl text-gray-700 mb-6">Renovamos tus puertas y muebles con acabados profesionales de alta calidad y garantía de 5 años</p>
            
            <!-- Price -->
            <div class="mb-6">
              <span class="text-2xl font-bold text-accent">desde 85€/puerta <span class="text-sm text-gray-500 font-normal">Montaje incluido</span></span>
            </div>
            
            <!-- CTAs -->
            <div class="flex flex-col sm:flex-row gap-4 mb-8">
              <a href="/presupuesto/" class="h-11 px-6 rounded-md bg-accent hover:bg-accent/90 text-white font-semibold shadow flex items-center justify-center">
                Presupuesto Gratis
              </a>
              <a href="tel:+34722208131" class="h-11 px-6 rounded-md bg-blue-600 hover:bg-blue-700 text-white font-semibold inline-flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
                722 208 131
              </a>
            </div>
            
            <!-- Features -->
            <div class="space-y-2">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Acabado perfecto</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Cualquier color RAL</span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-orange-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">Garantía 5 años</span>
              </div>
            </div>
          </div>

          <!-- Right side - Image -->
          <div class="lg:order-last">
            <div class="relative">
              <img src="/src/assets/pintura-interior-valencia.jpg" alt="Lacado de puertas y carpintería Valencia - Acabados profesionales" width="1920" height="1080" class="w-full h-auto object-cover" loading="lazy">
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Precio y condiciones -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Precio y condiciones
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
              Presupuesto transparente desde 85€/puerta con montaje incluido
            </p>
          </div>
          
          <div class="space-y-6 text-gray-700">
            <p class="text-lg leading-relaxed">
              El coste final depende del tipo de puerta, estado actual, acabado deseado y si requiere desmontaje. 
              Trabajamos tanto in situ como en nuestro taller profesional para conseguir los mejores acabados según cada caso.
            </p>
            
            <p class="text-lg leading-relaxed">
              Utilizamos lacas profesionales de alta calidad en cualquier color RAL y diferentes acabados: mate, satinado, brillo y efectos especiales. 
              Incluimos preparación completa, lijado, imprimación y acabado final con garantía de 5 años.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Nuestro proceso paso a paso -->
    <section class="py-12 bg-gray-100">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Nuestro proceso paso a paso
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Trabajamos con precisión profesional para conseguir acabados perfectos
          </p>
        </div>
        
        <div class="max-w-3xl mx-auto">
          <div class="space-y-6">
            <!-- Paso 1 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                1
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Evaluación y desmontaje</h3>
                <p class="text-gray-700">Evaluamos el estado de las puertas, elegimos el método de trabajo y desmontamos cuidadosamente si es necesario.</p>
              </div>
            </div>

            <!-- Paso 2 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                2
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Preparación y lijado</h3>
                <p class="text-gray-700">Lijamos completamente para eliminar el acabado anterior, reparamos imperfecciones y preparamos la superficie.</p>
              </div>
            </div>

            <!-- Paso 3 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                3
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Imprimación especializada</h3>
                <p class="text-gray-700">Aplicamos imprimación específica para lacado que garantiza adherencia perfecta y acabado duradero.</p>
              </div>
            </div>

            <!-- Paso 4 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                4
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Aplicación de laca</h3>
                <p class="text-gray-700">Aplicamos múltiples capas de laca profesional con pistola para conseguir un acabado uniforme y perfecto.</p>
              </div>
            </div>

            <!-- Paso 5 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                5
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Pulido y acabado final</h3>
                <p class="text-gray-700">Pulimos el acabado para eliminar cualquier imperfección y conseguir la textura y brillo deseados.</p>
              </div>
            </div>

            <!-- Paso 6 -->
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-gray-900 text-white rounded-full flex items-center justify-center text-sm font-bold">
                6
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Montaje y ajuste</h3>
                <p class="text-gray-700">Montamos las puertas con cuidado, realizamos ajustes necesarios y verificamos el funcionamiento perfecto.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Contact Section -->
        <!-- CTA Contact Section -->
    <section class="py-12 bg-blue-600 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-4">¿Necesitas lacar tus puertas?</h2>
        <p class="text-xl mb-8">Te respondemos en menos de 24 horas</p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/presupuesto/" class="inline-flex items-center justify-center font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-orange-500 text-white hover:bg-orange-600 focus:ring-orange-500 shadow-md hover:shadow-lg px-6 py-3 text-lg rounded-lg">
            Pedir presupuesto gratis
          </a>
          <a href="tel:+34722208131" class="inline-flex items-center justify-center font-semibold transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 bg-white text-blue-600 hover:bg-gray-100 focus:ring-blue-500 shadow-md hover:shadow-lg px-6 py-3 text-lg rounded-lg gap-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            722 208 131
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Preguntas frecuentes
          </h2>
        </div>

        <div class="max-w-3xl mx-auto space-y-6">
          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">
              ¿Lacáis las puertas en casa o las llevamos?
            </h3>
            <p class="text-gray-600">
              Trabajamos tanto in situ como en nuestro taller. Para acabados premium recomendamos el taller, pero podemos lacar en casa si es necesario.
            </p>
          </div>

          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">¿Qué tipos de lacado ofrecéis?</h3>
            <p class="text-gray-600">
              Ofrecemos lacado mate, satinado y brillo en cualquier color RAL. También lacado efecto madera y acabados especiales.
            </p>
          </div>

          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">
              ¿Cuánto tiempo tarda el proceso?
            </h3>
            <p class="text-gray-600">
              En taller: 3-5 días. En casa: 2-3 días dependiendo del número de puertas y el tipo de acabado.
            </p>
          </div>

          <div class="bg-white border rounded-lg p-6 shadow-sm">
            <h3 class="font-semibold mb-2 text-gray-900">
              ¿Incluye el desmontaje y montaje?
            </h3>
            <p class="text-gray-600">
              Sí, nos encargamos de todo: desmontaje, transporte (si aplica), lacado, y montaje final con ajustes.
            </p>
          </div>
        </div>
      </div>
    </section>

  </main>
</SiteLayout>
