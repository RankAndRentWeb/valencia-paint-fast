---
import SEO from '../layouts/SEO.astro';

const url = "https://pintores-valencia.com/";
const title = "Pintores en Valencia | Profesionales con garantía | Presupuesto gratis";
const description = "Pintores profesionales en Valencia. Pintura interior, exterior, quitar gotelé e impermeabilización. Presupuesto gratuito. ☎️ 722 208 131";
const ogImage = "https://pintores-valencia.com/hero-pintores-valencia.jpg";

const localBusinessSchema = [
  {
    "@context": "https://schema.org",
    "@type": "HousePainter",
    "name": "Pintores en Valencia",
    "url": "https://pintores-valencia.com",
    "image": "https://pintores-valencia.com/hero-pintores-valencia.jpg",
    "telephone": "+34722208131",
    "email": "edgarberriojimenez@gmail.com",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Valencia",
      "addressCountry": "ES",
    },
    "openingHours": ["Mo-Sa 08:00-20:00"],
    "serviceArea": {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": 39.4699,
        "longitude": -0.3763,
      },
      "geoRadius": "50000",
    },
    "priceRange": "€€",
    "areaServed": [{ "@type": "City", "name": "Valencia" }],
  }
];
---

<SEO 
  title={title}
  description={description}
  canonical={url}
  ogImage={ogImage}
  schema={localBusinessSchema}
  preloadImages={["/hero-pintores-valencia.jpg"]}
>
  <!-- Contenido estático HTML -->
  <div style="padding: 20px; font-family: Arial, sans-serif;">
    <h1>Pintores en Valencia</h1>
    <p>Profesionales con garantía</p>
    <p>Esta página usa el layout SEO y funciona correctamente.</p>
    <p>Teléfono: 722 208 131</p>
    <p>Ahora puedes usar tus componentes React con client:load</p>
  </div>
</SEO> 