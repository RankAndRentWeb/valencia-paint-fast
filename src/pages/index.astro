---
import SiteLayout from '../layouts/SiteLayout.astro';
import Index from '../components/_Index.tsx';
import heroImg from '../assets/hero-pintores-valencia.webp';
import featureImg from '../assets/pintor-profesional-valencia.jpg';
import siteConfig from '../config/site.json';

const title = "Pintores en Valencia - Pintores profesionales en Valencia";
const description = "Empresa de pintores en Valencia con más de 15 años de experiencia. Pintura interior, exterior, quitar gotelé. Presupuesto gratis. ☎️ 722 208 131";
const canonical = "https://pintores-valencia.com/";

// JSON-LD para HousePainter
const housepainterSchema = {
  "@context": "https://schema.org",
  "@type": "HousePainter",
  "name": siteConfig.name,
  "url": siteConfig.website,
  "telephone": siteConfig.phone,
  "email": siteConfig.email,
  "image": "https://pintores-valencia.com/og-home.webp",
  "priceRange": "€€",
  "areaServed": [
    {
      "@type": "City",
      "name": siteConfig.locality,
      "addressRegion": siteConfig.region,
      "addressCountry": siteConfig.country
    },
    {
      "@type": "AdministrativeArea", 
      "name": "Provincia de Valencia",
      "addressCountry": siteConfig.country
    }
  ],
  "address": {
    "@type": "PostalAddress",
    "addressLocality": siteConfig.locality,
    "addressRegion": siteConfig.region,
    "addressCountry": siteConfig.country
  },
  "openingHours": siteConfig.hours,
  "description": description,
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Servicios de Pintura",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Quitar Gotelé",
          "description": "Eliminación profesional de gotelé con acabado liso"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Pintura Interior",
          "description": "Pintura de interiores con materiales de calidad"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "Pintura Exterior",
          "description": "Pintura de fachadas y exteriores con garantía"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Impermeabilización", 
          "description": "Tratamiento contra humedades e impermeabilización"
        }
      }
    ]
  }
};
---

<SiteLayout 
  title={title}
  description={description}
  canonical={canonical}
  preloadImages={[heroImg.src]}
  schema={[housepainterSchema]}
>
  <Index client:load heroImage={heroImg} featureImage={featureImg} />
</SiteLayout>
