---
import SEOHead from '../components/SEOHead.tsx';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.tsx';
import Breadcrumbs from '../components/Breadcrumbs.tsx';
import MobileCallButton from '../components/MobileCallButton.tsx';
import WhatsAppFloat from '../components/WhatsAppFloat.tsx';
import { Phone, Mail, MapPin, Calculator, CheckCircle2, Clock, Award } from 'lucide-react';

const breadcrumbs = [
  { name: 'Inicio', href: '/' },
  { name: 'Presupuesto', href: '/presupuesto' }
];
---
<html lang="es">
<head>
  <SEOHead 
    title="Presupuesto Gratis de Pintura en Valencia | Sin Compromiso"
    description="Solicita tu presupuesto gratuito para pintura en Valencia. Respuesta en 24h, sin compromiso y precios competitivos. Contacta con nuestros pintores profesionales."
    canonical="https://pintoresvalencia.es/presupuesto"
    ogImage="/og-home.webp"
    schema={{
      "@context": "https://schema.org",
      "@type": "ContactPage",
      "name": "Presupuesto Gratis Pintores Valencia",
      "description": "Solicita presupuesto gratuito para trabajos de pintura en Valencia",
      "provider": {
        "@type": "LocalBusiness",
        "name": "Pintores en Valencia",
        "telephone": "+34722208131",
        "email": "edgarberriojimenez@gmail.com",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Valencia",
          "addressRegion": "Valencia",
          "addressCountry": "ES"
        }
      }
    }}
  />
</head>
<body class="min-h-screen flex flex-col">
  <Header />

  <main class="flex-grow">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-accent to-accent/90 text-white py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl lg:text-5xl font-bold mb-6">
            Presupuesto Gratis Sin Compromiso
          </h1>
          <p class="text-xl text-white/90 mb-8">
            Te respondemos en menos de 24 horas con un presupuesto detallado y personalizado para tu proyecto.
          </p>
          <div class="flex items-center justify-center gap-2 text-white/90">
            <CheckCircle2 className="w-5 h-5" />
            <span>Respuesta rápida</span>
            <span class="mx-2">•</span>
            <CheckCircle2 className="w-5 h-5" />
            <span>Sin compromiso</span>
            <span class="mx-2">•</span>
            <CheckCircle2 className="w-5 h-5" />
            <span>Precios competitivos</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Breadcrumbs -->
    <div class="container mx-auto px-4 py-4">
      <Breadcrumbs client:load items={breadcrumbs} />
    </div>

    <!-- Formulario de Presupuesto -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <!-- Formulario -->
            <div class="lg:col-span-2">
              <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">
                  Cuéntanos sobre tu proyecto
                </h2>
                <form class="space-y-6" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
                  <!-- Información Personal -->
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                        Nombre completo *
                      </label>
                      <input 
                        type="text" 
                        id="name" 
                        name="name"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                        placeholder="Tu nombre"
                      />
                    </div>
                    <div>
                      <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
                        Teléfono *
                      </label>
                      <input 
                        type="tel" 
                        id="phone" 
                        name="phone"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                        placeholder="722 208 131"
                      />
                    </div>
                  </div>

                  <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                      Email
                    </label>
                    <input 
                      type="email" 
                      id="email" 
                      name="email"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                      placeholder="tu@email.com"
                    />
                  </div>

                  <!-- Ubicación -->
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label for="location" class="block text-sm font-medium text-gray-700 mb-1">
                        Localidad *
                      </label>
                      <input 
                        type="text" 
                        id="location" 
                        name="location"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                        placeholder="Valencia, Sagunto, Xàtiva..."
                      />
                    </div>
                    <div>
                      <label for="property_type" class="block text-sm font-medium text-gray-700 mb-1">
                        Tipo de propiedad
                      </label>
                      <select 
                        id="property_type" 
                        name="property_type"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                      >
                        <option value="">Seleccionar...</option>
                        <option value="piso">Piso/Apartamento</option>
                        <option value="casa">Casa/Chalet</option>
                        <option value="local">Local comercial</option>
                        <option value="oficina">Oficina</option>
                        <option value="comunidad">Comunidad</option>
                        <option value="otro">Otro</option>
                      </select>
                    </div>
                  </div>

                  <!-- Tipo de Trabajo -->
                  <div>
                    <label for="service" class="block text-sm font-medium text-gray-700 mb-2">
                      ¿Qué servicio necesitas? *
                    </label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                      <label class="flex items-center">
                        <input type="checkbox" name="service[]" value="pintura_interior" class="rounded text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">Pintura interior</span>
                      </label>
                      <label class="flex items-center">
                        <input type="checkbox" name="service[]" value="pintura_exterior" class="rounded text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">Pintura exterior/fachada</span>
                      </label>
                      <label class="flex items-center">
                        <input type="checkbox" name="service[]" value="quitar_gotele" class="rounded text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">Quitar gotelé</span>
                      </label>
                      <label class="flex items-center">
                        <input type="checkbox" name="service[]" value="lacado" class="rounded text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">Lacado de puertas</span>
                      </label>
                      <label class="flex items-center">
                        <input type="checkbox" name="service[]" value="impermeabilizacion" class="rounded text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">Impermeabilización</span>
                      </label>
                      <label class="flex items-center">
                        <input type="checkbox" name="service[]" value="papel_pintado" class="rounded text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">Papel pintado</span>
                      </label>
                    </div>
                  </div>

                  <!-- Superficie aproximada -->
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <label for="surface" class="block text-sm font-medium text-gray-700 mb-1">
                        Superficie aproximada (m²)
                      </label>
                      <input 
                        type="number" 
                        id="surface" 
                        name="surface"
                        min="1"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                        placeholder="100"
                      />
                    </div>
                    <div>
                      <label for="urgency" class="block text-sm font-medium text-gray-700 mb-1">
                        Urgencia del trabajo
                      </label>
                      <select 
                        id="urgency" 
                        name="urgency"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                      >
                        <option value="">Seleccionar...</option>
                        <option value="no_urgente">No urgente (+ 1 mes)</option>
                        <option value="normal">Normal (2-4 semanas)</option>
                        <option value="urgente">Urgente (1-2 semanas)</option>
                        <option value="muy_urgente">Muy urgente (esta semana)</option>
                      </select>
                    </div>
                  </div>

                  <!-- Descripción del proyecto -->
                  <div>
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
                      Descripción del proyecto
                    </label>
                    <textarea 
                      id="description" 
                      name="description"
                      rows="4"
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-accent focus:border-transparent"
                      placeholder="Cuéntanos más detalles sobre tu proyecto: estado actual, colores deseados, problemas específicos..."
                    ></textarea>
                  </div>

                  <!-- Preferencia de contacto -->
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                      Preferencia de contacto
                    </label>
                    <div class="flex flex-wrap gap-4">
                      <label class="flex items-center">
                        <input type="radio" name="contact_preference" value="telefono" class="text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">Teléfono</span>
                      </label>
                      <label class="flex items-center">
                        <input type="radio" name="contact_preference" value="whatsapp" class="text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">WhatsApp</span>
                      </label>
                      <label class="flex items-center">
                        <input type="radio" name="contact_preference" value="email" class="text-accent focus:ring-accent" />
                        <span class="ml-2 text-sm">Email</span>
                      </label>
                    </div>
                  </div>

                  <!-- Términos -->
                  <div class="flex items-start">
                    <input type="checkbox" id="terms" name="terms" required class="mt-1 rounded text-accent focus:ring-accent" />
                    <label for="terms" class="ml-2 text-sm text-gray-600">
                      He leído y acepto la <a href="/politica-privacidad" class="text-accent hover:underline">política de privacidad</a> y el tratamiento de mis datos para recibir información comercial. *
                    </label>
                  </div>

                  <!-- Botón enviar -->
                  <div class="pt-4">
                    <button 
                      type="submit"
                      class="w-full bg-accent hover:bg-accent/90 text-white font-semibold py-3 px-6 rounded-md shadow-cta transition-all inline-flex items-center justify-center"
                    >
                      <Calculator className="w-5 h-5 mr-2" />
                      Solicitar Presupuesto Gratuito
                    </button>
                  </div>
                </form>
              </div>
            </div>

            <!-- Información adicional -->
            <div class="space-y-6">
              <!-- Contacto directo -->
              <div class="bg-primary text-white rounded-lg p-6">
                <h3 class="font-semibold mb-4">¿Prefieres llamar directamente?</h3>
                <div class="space-y-3">
                  <a href="tel:+34722208131" class="flex items-center text-white hover:text-accent transition-colors">
                    <Phone className="w-5 h-5 mr-3" />
                    <span class="font-semibold">722 208 131</span>
                  </a>
                  <a href="mailto:edgarberriojimenez@gmail.com" class="flex items-center text-white hover:text-accent transition-colors">
                    <Mail className="w-5 h-5 mr-3" />
                    <span class="text-sm">edgarberriojimenez@gmail.com</span>
                  </a>
                  <div class="flex items-center text-white/90">
                    <MapPin className="w-5 h-5 mr-3" />
                    <span class="text-sm">Valencia y provincia</span>
                  </div>
                  <div class="flex items-center text-white/90">
                    <Clock className="w-5 h-5 mr-3" />
                    <span class="text-sm">Lun-Sáb 08:00-20:00</span>
                  </div>
                </div>
              </div>

              <!-- Garantías -->
              <div class="bg-white rounded-lg shadow-lg p-6">
                <h3 class="font-semibold text-gray-900 mb-4">Nuestras Garantías</h3>
                <div class="space-y-3">
                  <div class="flex items-start">
                    <CheckCircle2 className="w-5 h-5 text-green-600 mr-3 mt-0.5" />
                    <div>
                      <div class="font-medium text-gray-900">Presupuesto gratuito</div>
                      <div class="text-sm text-gray-600">Sin compromiso ni costes ocultos</div>
                    </div>
                  </div>
                  <div class="flex items-start">
                    <Clock className="w-5 h-5 text-blue-600 mr-3 mt-0.5" />
                    <div>
                      <div class="font-medium text-gray-900">Respuesta en 24h</div>
                      <div class="text-sm text-gray-600">Te contactamos rapidamente</div>
                    </div>
                  </div>
                  <div class="flex items-start">
                    <Award className="w-5 h-5 text-accent mr-3 mt-0.5" />
                    <div>
                      <div class="font-medium text-gray-900">Garantía por escrito</div>
                      <div class="text-sm text-gray-600">Hasta 2 años en nuestros trabajos</div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Testimonios rápidos -->
              <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="font-semibold text-gray-900 mb-4">Lo Que Dicen Nuestros Clientes</h3>
                <div class="space-y-4">
                  <div class="border-l-4 border-accent pl-4">
                    <p class="text-sm text-gray-700 italic">"Presupuesto muy detallado y precio justo. El trabajo impecable."</p>
                    <p class="text-xs text-gray-500 mt-1">- María, Valencia</p>
                  </div>
                  <div class="border-l-4 border-primary pl-4">
                    <p class="text-sm text-gray-700 italic">"Puntuales, limpios y profesionales. Totalmente recomendables."</p>
                    <p class="text-xs text-gray-500 mt-1">- Carlos, Sagunto</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Proceso de trabajo -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
            Cómo Trabajamos
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="text-center">
              <div class="bg-accent/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-bold text-accent">1</span>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Solicitas</h3>
              <p class="text-gray-700 text-sm">Rellenas el formulario o nos llamas directamente</p>
            </div>
            <div class="text-center">
              <div class="bg-primary/10 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-bold text-primary">2</span>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Visitamos</h3>
              <p class="text-gray-700 text-sm">Visitamos tu propiedad para evaluar el trabajo</p>
            </div>
            <div class="text-center">
              <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-bold text-blue-600">3</span>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Presupuestamos</h3>
              <p class="text-gray-700 text-sm">Te enviamos un presupuesto detallado y transparente</p>
            </div>
            <div class="text-center">
              <div class="bg-green-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-bold text-green-600">4</span>
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Ejecutamos</h3>
              <p class="text-gray-700 text-sm">Realizamos el trabajo con garantía de calidad</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
  <MobileCallButton client:load />
  <WhatsAppFloat client:load />
</body>
</html>