---
import SEO from '../layouts/SEO.astro';
import QuienesSomos from './_QuienesSomos.tsx';

const url = "https://pintores-valencia.com/quienes-somos";
const title = "Quiénes somos | Pintores profesionales en Valencia | Experiencia";
const description = "Conoce a nuestro equipo de pintores profesionales en Valencia. Más de 10 años de experiencia. Calidad y confianza garantizada. ☎️ 722 208 131";
const ogImage = "https://pintores-valencia.com/equipo-pintores-valencia.jpg";

const aboutSchema = [
  {
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "name": "Quiénes somos - Pintores en Valencia",
    "description": "Información sobre nuestro equipo de pintores profesionales",
    "url": "https://pintores-valencia.com/quienes-somos",
    "mainEntity": {
      "@type": "LocalBusiness",
      "name": "Pintores en Valencia",
      "telephone": "+34722208131",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Valencia",
        "addressCountry": "ES"
      },
      "foundingDate": "2014"
    }
  }
];
---

<SEO 
  title={title}
  description={description}
  canonical={url}
  ogImage={ogImage}
  schema={aboutSchema}
>
  <!-- Tu componente React QuienesSomos se renderiza aquí -->
  <QuienesSomos client:load />
</SEO> 