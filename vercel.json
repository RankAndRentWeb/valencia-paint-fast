{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" }
      ]
    }
  ],
  "redirects": [
    { "source": "https://www.pintores-valencia.com/(.*)", "destination": "https://pintores-valencia.com/$1", "permanent": true }
  ],
  "rewrites": [
    { "source": "/((?!assets/|images/|robots\\.txt|sitemap\\.xml|favicon\\.ico|manifest\\.webmanifest|api/).*)", "destination": "/" }
  ]
}
